<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegisterFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:textColor="#000000"
                android:layout_marginTop="36sp"
                android:layout_marginLeft="30sp"
                android:textSize="16dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#261C12"
                android:layout_marginTop="50sp"
                android:layout_marginLeft="30sp"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome!"
                android:textColor="#261C12"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="30sp"
                android:textSize="32dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/image_radus"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/google" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/image_radus"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/apple" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/image_radus"
                    android:layout_marginLeft="20dp"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/face" />
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="or signup with"
                android:textColor="#261C12"
                android:layout_marginTop="16sp"
                android:textAlignment="center"
                android:textSize="16dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50sp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="#ECE7E5"
                android:background="@drawable/edit_back"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Full Name"
                    android:paddingStart="10dp"
                    android:textSize="15dp"
                    android:padding="5dp"
                    android:id="@+id/edit_fullName"
                    android:drawableStart="@drawable/baseline_person_outline"                android:textColor="#261C12"
                    android:background="@drawable/back"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20sp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="#ECE7E5"
                android:background="@drawable/edit_back"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Email Address"
                    android:paddingStart="10dp"
                    android:textSize="15dp"
                    android:id="@+id/edit_email"
                    android:padding="5dp"
                    android:drawableStart="@drawable/baseline_lock"
                    android:textColor="#261C12"
                    android:background="@drawable/back"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20sp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="#ECE7E5"
                android:background="@drawable/edit_back"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Phone Number"
                    android:paddingStart="10dp"
                    android:textSize="15dp"
                    android:padding="5dp"
                    android:inputType="number"
                    android:id="@+id/edit_phone"
                    android:drawableStart="@drawable/baseline_phone"
                    android:textColor="#261C12"
                    android:background="@drawable/back"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20sp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="#ECE7E5"
                android:background="@drawable/edit_back"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Password"
                    android:paddingStart="10dp"
                    android:textSize="15dp"
                    android:id="@+id/edit_password"
                    android:padding="5dp"
                    android:drawableStart="@drawable/baseline_lock"
                    android:textColor="#261C12"
                    android:background="@drawable/back"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20sp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="#ECE7E5"
                android:background="@drawable/edit_back"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Re-enter Password"
                    android:paddingStart="10dp"
                    android:textSize="15dp"
                    android:padding="5dp"
                    android:id="@+id/RePasssword"
                    android:drawableStart="@drawable/baseline_lock"
                    android:textColor="#261C12"
                    android:background="@drawable/back"
                    />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                >

                <TextView
                    android:id="@+id/infoFrag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    android:text="or signup with"
                    android:textAlignment="center"
                    android:textColor="#261C12"
                    android:textSize="16dp" />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="230dp"
                    android:layout_height="60dp"
                    android:text="Submit"
                    android:textColor="#fff"
                    android:backgroundTint="#D5715B"
                    android:id="@+id/registerButton1"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>
</ScrollView>